<h1><%= @person.first_name %> <%= @person.last_name %></h1>
<% if @person.addresses.any? %>
    <h2>Addresses:</h2>
    <table>
        <thead>
            <tr>
                <th>Kind</th>
                <th>Street</th>
            </tr>
        </thead>
        <tbody>
            <%= render @person.addresses %>
        </tbody>
    </table>   
<% end %> 